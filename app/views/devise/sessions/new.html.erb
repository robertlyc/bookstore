<% content_for :title, "Login | GoRails" %>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="light-well">
        <h2 class="page-header text-center">Welcome Back!</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.button "Sign in", class: "btn btn-success btn-lg btn-block",
                           data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing in..."} %>
            </div>
        <% end %>

        <div class="text-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>

      </div>
    </div>
  </div>
</div>

